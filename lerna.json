{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "1.0.0",
  "npmClient": "npm",
  "packages": ["packages/*"],
  "command": {
    "bootstrap": {
      "ignore": "npm-*",
      "npmClientArgs": ["--no-package-lock"]
    },
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish"
    }
  },
  "ignoreChanges": [
    "**/*.md",
    "**/*.test.*",
    "**/*.spec.*",
    "**/__tests__/**",
    "**/stories/**",
    "**/dist/**",
    "**/build/**"
  ]
}
